<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Welcome to Home Screen"
        android:textSize="20dp"
        android:textColor="@color/mintGreen"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="375dp"
        android:layout_height="116dp"
        android:layout_below="@id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:padding="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="162dp"
            android:layout_height="43dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Total Expenses"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="166dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Amount"
            android:textSize="17dp" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-2dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_space_dashboard_24" />

            <TextView
                android:id="@+id/imagetext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="5dp"
                android:text="Dashboard"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_pie_chart_24" />

            <TextView
                android:id="@+id/imagetext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="5dp"
                android:text=" Chart "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_history_24" />

            <TextView
                android:id="@+id/imagetext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="5dp"
                android:text="History"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_person_pin_24" />

            <TextView
                android:id="@+id/imagetext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginBottom="5dp"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="179dp"
        android:layout_height="95dp"
        android:layout_below="@+id/cardView1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="48dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="105dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:text="Food"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="105dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:text="TextView"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="172dp"
        android:layout_height="97dp"
        android:layout_below="@+id/cardView1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="14dp"
        android:layout_toEndOf="@+id/cardView2"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="105dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:text="Rent"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="91dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:text="Amount"
            android:textSize="17dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="172dp"
        android:layout_height="99dp"
        android:layout_above="@+id/toolbar2"
        android:layout_below="@+id/cardView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="158dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="105dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:text="Groceries"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="105dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:text="Amount"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="163dp"
        android:layout_height="97dp"
        android:layout_above="@+id/toolbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="157dp"
        android:layout_toEndOf="@+id/cardView4"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="122dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:text="Miscellaneous"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="69dp"
            android:layout_height="33dp"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:text="Amount"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="102dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/baseline_add_circle_outline_24" />


</RelativeLayout>